<h2 id="eat-burger-title">Eat the Burger!</h2>

<img id="burger-pic" src="../public/img/burger.png">

{{!-- Change cats to burgers --}}

<ul>
  {{#each burger}}
    {{#unless eaten}}
      {{> burger/burgers eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burger}}
    {{#if not eaten}}
      {{> burger/burgers Eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="a" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Eaten</label><br>
    <input type="radio" name="sleepy" value="1" checked>Eaten! Om nom nom nom!<br>
    <input type="radio" name="sleepy" value="0"> Not eaten!
  </div>

  <button type="submit">Add Burger</button>
</form>
