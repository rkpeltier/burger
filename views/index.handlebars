<h2 id="eat-burger-title">Eat the Burger!</h2>

<img id="burger-pic" src="../public/img/burger.png">

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burgers devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burger}}
    {{#if burger_name}}
      {{> burger/burgers devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="a" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten</label><br>
    <input type="radio" name="devoured" value="1" checked>Eaten! Om nom nom nom!<br>
    <input type="radio" name="devoured" value="0"> Not eaten!
  </div>

  <button type="submit">Add Burger</button>
</form>
